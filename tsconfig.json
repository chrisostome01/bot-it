{
    "compilerOptions": {
      "lib": ["es6"],
      "target": "es6",
      "module": "CommonJS",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strictNullChecks": true,
    },
    "ts-node": {
      "files": true
    },
    "allowAny": true,
    "include": [
      "src/**/*.ts",
    ],
    "exclude": [
      "node_modules"
    ]
  }
  